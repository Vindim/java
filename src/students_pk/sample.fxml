<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="students_pk.controllers.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <TabPane prefHeight="600.0" prefWidth="800.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Студенты">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ToolBar prefHeight="40.0" prefWidth="800.0">
                          <items>
                            <Button fx:id="addButton" mnemonicParsing="false" onMouseClicked="#onClickMethod" text="Добавить" />
                              <Button mnemonicParsing="false" text="Редактировать" />
                              <Button mnemonicParsing="false" prefHeight="25.0" prefWidth="85.0" text="Удалить" />
                          </items>
                        </ToolBar>
                        <TableView fx:id="studentsTable" layoutY="40.0" prefHeight="530.0" prefWidth="800.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="Фамилия" fx:id="lastNameColumn" />
                            <TableColumn prefWidth="75.0" text="Имя" fx:id="firstNameColumn" />
                              <TableColumn prefWidth="75.0" text="Отчество" fx:id="middleNameColumn" />
                              <TableColumn prefWidth="100.0" text="Факультет" fx:id="facultyColumn" />
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Экзамены">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
          </Tab>
            <Tab text="Аудитории">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
            <Tab text="Результаты">
               <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
               </content>
            </Tab>
        </tabs>
      </TabPane>
   </children>
</GridPane>
