<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<Tab fx:controller="students_pk.modules.data.view.RoomController" closable="false" text="Аудитории" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" onSelectionChanged="#fullReload">
    <content>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <ToolBar layoutY="-6.0" prefHeight="50.0" prefWidth="771.0">
                    <items>
                        <Button mnemonicParsing="false" text="Добавить" onMouseClicked="#addClicked"/>
                        <Button mnemonicParsing="false" text="Редактировать" fx:id="editButton" onMouseClicked="#editClicked" />
                        <Button mnemonicParsing="false" text="Удалить" fx:id="deleteButton" onMouseClicked="#deleteClicked"/>
                        <TextField fx:id="searchField"/>
                        <Button mnemonicParsing="false" text="x" onMouseClicked="#clearSearch" />
                    </items>
                </ToolBar>
                <TableView fx:id="roomTable" layoutY="44.0" prefHeight="528.0" prefWidth="771.0">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Номер аудитории" fx:id="roomNumber" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </content>
</Tab>
