<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.* ?>
<?import javafx.scene.layout.* ?>

<Tab fx:controller="students_pk.modules.data.view.StudentsController" closable="false" text="Студенты" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <content>
        <AnchorPane prefHeight="200.0" prefWidth="200.0">
            <children>
                <ToolBar layoutY="-6.0" prefHeight="50.0" prefWidth="771.0">
                    <items>
                        <Button fx:id="addButton" mnemonicParsing="false" text="Добавить" onMouseClicked="#showModal"/>
                        <Button mnemonicParsing="false" text="Редактировать" />
                        <Button mnemonicParsing="false" text="Удалить" />
                        <ChoiceBox nodeOrientation="LEFT_TO_RIGHT" prefWidth="150.0" />
                        <TextField />
                    </items>
                </ToolBar>
                <TableView layoutY="44.0" prefHeight="528.0" prefWidth="771.0" fx:id="studentsTable">
                    <columns>
                        <TableColumn prefWidth="75.0" text="Фамилия" fx:id="lastNameColumn" />
                        <TableColumn prefWidth="75.0" text="Имя" fx:id="firstNameColumn" />
                        <TableColumn prefWidth="75.0" text="Отчество" fx:id="middleNameColumn" />
                        <TableColumn prefWidth="75.0" text="Факультет" fx:id="facultyColumn" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </content>
</Tab>
